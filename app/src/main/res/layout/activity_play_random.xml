<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:padding="20dp">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="392dp"
        android:layout_height="348dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_x"
        tools:layout_editor_absoluteX="-28dp">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--TODO USE VECTOR ASSET FOR PLACEHOLDERS, SCALES WEIRD WITH AN XML SHAPE-->
            <ImageView
                android:id="@+id/imageButton00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageButton03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageButton06"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton07"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />

            <ImageView
                android:id="@+id/imageButton08"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorBackgroundDark"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gamepiece_placeholder" />
        </TableRow>

        <TableRow>

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp"
        tools:text="Random turn tic-tac-toe" />

    <ImageButton
        android:id="@+id/btn_x"
        android:layout_width="44dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_gamepiece_x_blue"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="82dp" />

    <ImageButton
        android:id="@+id/btn_o"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_gamepiece_o_red"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/randomBtn"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Random"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toStartOf="@+id/btn_o"
        app:layout_constraintStart_toEndOf="@+id/btn_x"
        app:layout_constraintTop_toBottomOf="@+id/game_description" />

    <TextView
        android:id="@+id/game_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Each turn is randomized. Press the Random button to know who's turn is next!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_title" />

</android.support.constraint.ConstraintLayout>